{
  "rules": {
    // İlanlar - sadece okuma izni, yazma admin panelinden
    "ilanlar": {
      ".read": true,
      ".write": false,
      ".indexOn": ["tarih", "fiyat", "il", "ilce", "mahalle", "tip", "durum"]
    },
    
    // Projeler - sadece okuma izni
    "projeler": {
      ".read": true,
      ".write": false,
      ".indexOn": ["tarih", "fiyat", "il", "ilce"]
    },
    
    // Filtreleme verileri - sadece okuma izni
    "imar_durumu": {
      ".read": true,
      ".write": false
    },
    "tapu_durumu": {
      ".read": true,
      ".write": false
    },
    "gabari": {
      ".read": true,
      ".write": false
    },
    "kaks": {
      ".read": true,
      ".write": false
    },
    "cevre_kategorisi": {
      ".read": true,
      ".write": false
    },
    "cevre_kategorileri": {
      ".read": true,
      ".write": false
    },
    "cevreler": {
      ".read": true,
      ".write": false
    },
    
    // Site ayarları - sadece okuma izni
    "site-settings": {
      ".read": true,
      ".write": false
    },
    "site_ayarlari": {
      ".read": true,
      ".write": false
    },
    
    // Test bağlantısı - sadece okuma izni
    "test-connection": {
      ".read": true,
      ".write": false
    },
    
    // Açıklama ve içerik - sadece okuma izni
    "aciklama": {
      ".read": true,
      ".write": false
    },
    "soru_cevap": {
      ".read": true,
      ".write": false
    },
    "testimonials": {
      ".read": true,
      ".write": false
    },
    
    // Kullanıcı verileri - sadece okuma izni
    "users": {
      ".read": true,
      ".write": false
    },
    
    // Sayfa içerikleri - sadece okuma izni
    "sayfalar": {
      ".read": true,
      ".write": false
    },
    "destek": {
      ".read": true,
      ".write": false
    },
    "kurumsal": {
      ".read": true,
      ".write": false
    },
    "hizmetler": {
      ".read": true,
      ".write": false
    },
    
    // Newsletter - yazma izni sadece email ekleme için
    "newsletter": {
      ".read": false,
      ".write": "newData.hasChildren(['email', 'tarih']) && newData.child('email').isString() && newData.child('tarih').isString()"
    },
    
    // Admin paneli - sadece belirli kullanıcılar
    "admin": {
      ".read": "auth != null && auth.uid == 'admin-user-id'",
      ".write": "auth != null && auth.uid == 'admin-user-id'"
    }
  }
}
