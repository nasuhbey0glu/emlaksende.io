{
  "rules": {
    // İlanlar - herkes okuyabilir, sadece authenticated kullanıcı yazabilir
    "ilanlar": {
      ".read": true,
      ".write": "auth != null",
      ".indexOn": ["tarih", "fiyat", "il", "ilce", "mahalle", "tip", "durum"]
    },
    
    // Projeler - herkes okuyabilir, sadece authenticated kullanıcı yazabilir
    "projeler": {
      ".read": true,
      ".write": "auth != null",
      ".indexOn": ["tarih", "fiyat", "il", "ilce"]
    },
    
    // Filtreleme verileri - herkes okuyabilir, sadece authenticated kullanıcı yazabilir
    "imar_durumu": {
      ".read": true,
      ".write": "auth != null"
    },
    "tapu_durumu": {
      ".read": true,
      ".write": "auth != null"
    },
    "gabari": {
      ".read": true,
      ".write": "auth != null"
    },
    "kaks": {
      ".read": true,
      ".write": "auth != null"
    },
    "cevre_kategorisi": {
      ".read": true,
      ".write": "auth != null"
    },
    "cevre_kategorileri": {
      ".read": true,
      ".write": "auth != null"
    },
    "cevreler": {
      ".read": true,
      ".write": "auth != null"
    },
    
    // Site ayarları - herkes okuyabilir, sadece authenticated kullanıcı yazabilir
    "site-settings": {
      ".read": true,
      ".write": "auth != null"
    },
    "site_ayarlari": {
      ".read": true,
      ".write": "auth != null"
    },
    
    // Test bağlantısı - sadece okuma
    "test-connection": {
      ".read": true,
      ".write": false
    },
    
    // İçerik sayfaları - herkes okuyabilir, sadece authenticated kullanıcı yazabilir
    "aciklama": {
      ".read": true,
      ".write": "auth != null"
    },
    "soru_cevap": {
      ".read": true,
      ".write": "auth != null"
    },
    "testimonials": {
      ".read": true,
      ".write": "auth != null"
    },
    "sayfalar": {
      ".read": true,
      ".write": "auth != null"
    },
    "destek": {
      ".read": true,
      ".write": "auth != null"
    },
    "kurumsal": {
      ".read": true,
      ".write": "auth != null"
    },
    "hizmetler": {
      ".read": true,
      ".write": "auth != null"
    },
    
    // Users tablosu - TAMAMEN KALDIRILDI!
    // Artık Firebase Authentication kullanıyoruz
    
    // Newsletter - sadece email ekleme izni
    "newsletter": {
      ".read": false,
      ".write": "newData.hasChildren(['email', 'tarih']) && newData.child('email').isString() && newData.child('tarih').isString()"
    }
  }
}
